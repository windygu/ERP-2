    <script>
        $(function() {

            $("#FactoryDataList").datagrid({
                data: @(Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.list_Purchase))),
            });

            $("#MyPopGrid2").datagrid({
