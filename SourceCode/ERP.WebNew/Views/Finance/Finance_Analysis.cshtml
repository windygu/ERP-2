                            @Html.TextBoxFor(d => d.CustomerCode, new { @class = "form-control" })
                        </div>
                    </li>
                    <li>
                        <label class="col-xs-2">@ERP.Tools.Keys.CustomerPO：</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(d => d.POID, new { @class = "form-control" })
