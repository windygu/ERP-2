                    </li>
                    <li>
                        <label class="col-xs-2">采购合同编号：</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(d => d.PurchaseNumber, new { @class = "form-control" })
                        </div>
                    </li>
                    <li>
                        <label class="col-xs-2">货号：</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(d => d.No, new { @class = "form-control" })
                        </div>
                    </li>
