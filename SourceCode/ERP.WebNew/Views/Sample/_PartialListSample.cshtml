@using ERP.Models.CustomEnums
@using ERP.Models.CustomEnums.PageElementsPrivileges
@model ERP.Models.Sample.VMFilterSample

<div class="content-wrapper" style="min-height: 600px">
    <div align="right">
        <form method="get" class="form-inline frmFind" role="form">
            <!--数据列表默认查询条件：寄样信息状态-->

            <div class="search_Condition box_1k">
                <ul>
                    @if (Model.PageType == PageTypeEnum.ManufacturingPage || Model.PageType == PageTypeEnum.ManufacturedPage)
                    {
                        <li>
                            <label class="col-xs-2">客户：</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(d => d.CustomerCode, new { @class = "form-control" })
                            </div>
                        </li>

                        <li>
                            <label class="col-xs-2">工厂：</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(d => d.FactoryAbbreviation, new { @class = "form-control" })
                            </div>
                        </li>

                        @*<li>
                                <label class="col-xs-2">产品：</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(d => d.Products, new { @class = "form-control" })
                                </div>
                            </li>*@

                        <li>
                            <label class="col-xs-2">报价日期：</label>
                            <div class="col-sm-10">
                                <div class="col-xs-5" style="padding:0;">
                                    @Html.TextBoxFor(d => d.QuotDateStart, new { @class = "form-control Wdate" })
                                </div>
                                <span class="col-xs-1" style="padding:0;">-</span>
                                <div class="col-xs-5" style="padding:0;">
                                    @Html.TextBoxFor(d => d.QuotDateEnd, new { @class = "form-control Wdate" })
                                </div>
                            </div>
                        </li>

                        <li>
                            <label class="col-xs-2">销售订单日期：</label>
                            <div class="col-sm-10">
                                <div class="col-xs-5" style="padding:0;">
                                    @Html.TextBoxFor(d => d.OrderDateStart, new { @class = "form-control Wdate" })
                                </div>
                                <span class="col-xs-1" style="padding:0;">-</span>
                                <div class="col-xs-5" style="padding:0;">
                                    @Html.TextBoxFor(d => d.OrderDateEnd, new { @class = "form-control Wdate" })
                                </div>
                            </div>
                        </li>

                        <li>
                            <label class="col-xs-2">下发日期：</label>
                            <div class="col-sm-10">
                                <div class="col-xs-5" style="padding:0;">
                                    @Html.TextBoxFor(d => d.IssueDateStart, new { @class = "form-control Wdate" })
                                </div>
                                <span class="col-xs-1" style="padding:0;">-</span>
                                <div class="col-xs-5" style="padding:0;">
                                    @Html.TextBoxFor(d => d.IssueDateEnd, new { @class = "form-control Wdate" })
                                </div>
                            </div>
                        </li>

                        <li>
                            <label class="col-xs-2">要求完成日期：</label>
                            <div class="col-sm-10">
                                <div class="col-xs-5" style="padding:0;">
                                    @Html.TextBoxFor(d => d.PFDateStart, new { @class = "form-control Wdate" })
                                </div>
                                <span class="col-xs-1" style="padding:0;">-</span>
                                <div class="col-xs-5" style="padding:0;">
                                    @Html.TextBoxFor(d => d.PFDateEnd, new { @class = "form-control Wdate" })
                                </div>
                            </div>
                        </li>
                    }

                    @if (Model.PageType == PageTypeEnum.SendingPage || Model.PageType == PageTypeEnum.SendedPage)
                    {
                        <li>
                            <label class="col-xs-2">工厂样品单号：</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(d => d.FacManufactureID, new { @class = "form-control" })
                            </div>
                        </li>

                        @*<li>
                                <label class="col-xs-2">样品所在办事处：</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(d => d.ProductsOffice, new { @class = "form-control" })
                                </div>
                            </li>*@

                    }

                    @if (Model.PageType == PageTypeEnum.SendingPage)
                    {
                        <li>
                            <label class="col-xs-2">样品完成日期：</label>
                            <div class="col-sm-10">
                                <div class="col-xs-5" style="padding:0;">
                                    @Html.TextBoxFor(d => d.FinishDateStart, new { @class = "form-control Wdate" })
                                </div>
                                <span class="col-xs-1" style="padding:0;">-</span>
                                <div class="col-xs-5" style="padding:0;">
                                    @Html.TextBoxFor(d => d.FinishDateEnd, new { @class = "form-control Wdate" })
                                </div>
                            </div>
                        </li>

                        <li>
                            <label class="col-xs-2">最迟寄样日期：</label>
                            <div class="col-sm-10">
                                <div class="col-xs-5" style="padding:0;">
                                    @Html.TextBoxFor(d => d.PSDateStart, new { @class = "form-control Wdate" })
                                </div>
                                <span class="col-xs-1" style="padding:0;">-</span>
                                <div class="col-xs-5" style="padding:0;">
                                    @Html.TextBoxFor(d => d.PSDateEnd, new { @class = "form-control Wdate" })
                                </div>
                            </div>
                        </li>

                    }

                    @if (Model.PageType == PageTypeEnum.SendedPage)
                    {
                        <li>
                            <label class="col-xs-2">寄出日期：</label>
                            <div class="col-sm-10">
                                <div class="col-xs-5" style="padding:0;">
                                    @Html.TextBoxFor(d => d.SendDateStart, new { @class = "form-control Wdate" })
                                </div>
                                <span class="col-xs-1" style="padding:0;">-</span>
                                <div class="col-xs-5" style="padding:0;">
                                    @Html.TextBoxFor(d => d.SendDateEnd, new { @class = "form-control Wdate" })
                                </div>
                            </div>
                        </li>

                        <li>
                            <label class="col-xs-2">收货日期：</label>
                            <div class="col-sm-10">
                                <div class="col-xs-5" style="padding:0;">
                                    @Html.TextBoxFor(d => d.AcceptedDateStart, new { @class = "form-control Wdate" })
                                </div>
                                <span class="col-xs-1" style="padding:0;">-</span>
                                <div class="col-xs-5" style="padding:0;">
                                    @Html.TextBoxFor(d => d.AcceptedDateEnd, new { @class = "form-control Wdate" })
                                </div>
                            </div>
                        </li>
                    }

                    @if (Model.PageType != PageTypeEnum.SendedPage)
                    {
                        <li>
                            <label class="col-xs-2">样品状态：</label>
                            <div class="col-sm-10">
                                @Html.DropDownListFor(d => d.SampleStatus, ViewData["SampleStatus"] as SelectList, new { @class = "form-control" })
                            </div>
                        </li>
                    }

                    <li class="search">
                        <button type="submit" class="btn btn-info" onclick="return OA.s(this)">查询</button>
                        <button type="button" class="btn btn-info" onclick="clearAll(this)">清空所有</button>
                    </li>
                </ul>
            </div>
        </form>
    </div>

    @if (Model.PageType == PageTypeEnum.ManufacturingPage)
    {
        Model.SingleSelect = false;

        <div class="Control">
            @if ((Model.PageElementPrivileges & (int)SampleElementPrivileges.AddManu) > 0)
            {
                <button type="button" class="btn btn-danger" wintype="idialog" winsize="1200,800,yes" onclick="return OA.i(this);" href="@Url.Content("~/Sample/GetCreateWayData")?SSID=0&&CreateWay=0&PageType=1">新建样品单</button>
            }

            @if ((Model.PageElementPrivileges & (int)SampleElementPrivileges.DelData) > 0)
            {
                <button type="button" class="btn btn-default" onclick="DeleteSelected()">删除</button>
            }
        </div>
    }
    else
    {
        Model.SingleSelect = true;

    }

    <div class="box_1k" style="width:100%;overflow:auto">
        <!--只在待打样列表中允许多选数据-->
        <table id="tblManufacturingDataList" class="easyui-datagrid" data-options="width:'auto',height:'500',singleSelect:@(Model.SingleSelect == true ? "true" : "false"),pageList: [10,50,200,500,1000], pageSize:50,remoteSort:true,multiSort:true,pagination:true,striped:true,url:'@Url.Content("~/Sample/GetSampleDataList")?PageType=@((int)Model.PageType)&@Request.QueryString',method:'get',rowStyler:SetRowStyler,onLoadSuccess:LoadDataSuccess,@(ERP.Tools.Keys.EasyUiDataGridSetting)">

            <thead>
                <tr>
                    @if (Model.SingleSelect)
                    {

                    }
                    else
                    {
                        <th data-options="field:'ck',checkbox:true"></th>

                    }

                    <th data-options="field:'CreateWay',sortable:true,align:'center',hidden:true">创建方式</th>
                    <th data-options="field:'IsDelayFinsh',sortable:true,align:'center',hidden:true">是否延迟完成生产</th>

                    <th data-options="field:'FacManufactureID',sortable:true,align:'center',width:120">工厂样品单号</th>
                    <th data-options="field:'FactoryAbbreviation',sortable:true,align:'center',width:100">工厂</th>
                    <th data-options="field:'QuotNumber',sortable:true,align:'center',width:120">报价单号</th>
                    <th data-options="field:'PurchaseNumber',sortable:true,align:'center',width:120">销售订单号</th>
                    <th data-options="field:'CustomerCode',sortable:true,align:'center',width:100">客户</th>

                    @if (Model.PageType == PageTypeEnum.ManufacturingPage || Model.PageType == PageTypeEnum.ManufacturedPage)
                    {
                        <th data-options="field:'IssueDate',sortable:true,align:'center',width:100">下发日期</th>
                        <th data-options="field:'ClaimFinishDate',sortable:true,align:'center',width:100">要求完成日期</th>
                        <th data-options="field:'PlanFinishDate',sortable:true,align:'center',width:100">计划完成日期</th>
                        <th data-options="field:'SampleModNum',sortable:true,align:'center',width:100">样品修改次数</th>
                    }
                    else
                    {
                        <th data-options="field:'ActualFinishDate',sortable:true,align:'center',width:100">样品完成日期</th>
                        <th data-options="field:'AffirmDate',sortable:true,align:'center',width:100">样品确认日期</th>
                        <th data-options="field:'PlanSendDate',sortable:true,align:'center',width:100">要求寄出日期</th>
                        <th data-options="field:'ProductsOffice',sortable:true,align:'center',width:100">样品所在办事处</th>
                        <th data-options="field:'PaymentWay',sortable:true,align:'center',width:100">付款方式</th>
                    }

                    <th data-options="field:'SampleStatusID',sortable:true,align:'center',hidden:true">样品状态</th>
                    <th data-options="field:'SampleStatus',sortable:true,align:'center',width:80">样品状态</th>
                    <th data-options="field:'UpdateDateFormatter',sortable:true,align:'center',width:130">最后修改时间</th>

                    <th data-options="field:'SSID',align:'center',formatter:operationFormatter">操作</th>
                </tr>
            </thead>
        </table>
    </div>
</div>